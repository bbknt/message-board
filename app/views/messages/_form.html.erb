<%= form_for(@message, html: {class: "form-horizontal"} ) do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
      <% @message.errors.full_messages.each do |full_message| %>
        <li><%= full_message %></li>
      <% end %>
　　  </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="form-group">
        <label for="name" class="control-label col-sm-2">名前</label>
        <div class="col-sm-5">
          <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
        </div>
      </div>

      <div class="form-group">
        <label for="age" class="control-label col-sm-2">年齢</label>
        <div class="col-sm-2">
          <%= f.text_field :age, class: "form-control", placeholder: "半角数字で入力" %>
        </div>
      </div>

      <div class="form-group">
        <label for="body" class="control-label col-sm-2">内容</label>
        <div class="col-sm-9">
          <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "内容" %>
        </div>
      </div>

    </div>
        
  <%= f.submit class: "btn btn-lg btn-primary center-block"  %>
    
  </div>
    
<% end %>