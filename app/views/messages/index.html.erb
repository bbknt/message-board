<div class="panel panel-default">
    <div class="panel-heading">
      メッセージ一覧
    </div>
    
    <div class="panel-body">
      <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br />
      <% end %>
    </div>
</div>



  <div class="form-group">
    <%= form_for(@message) do |f| %>
    <label for="name" class="control-label">名前</label>
    <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
  </div>

  <div class="form-group">
    <label for="body" class="control-label">内容</label>
    <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "内容" %>
  </div>

  <%= f.submit class: "btn btn-sm btn-primary" %>
  <% end %>

